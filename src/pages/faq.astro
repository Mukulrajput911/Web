---
import Layout from '../layouts/Layout.astro';
import faqs from '../data/faqs.json';
---

<Layout title="Frequently Asked Questions">
  <section class="pt-32 pb-20">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-3xl mx-auto text-center mb-12" data-aos="fade-up">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Frequently Asked Questions</h1>
        <p class="text-neutral-600 text-lg">Find answers to common questions about buying, selling, and investing in real estate</p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        {faqs.categories.map((category, index) => (
          <div class="mb-12" data-aos="fade-up" data-aos-delay={100 * index}>
            <h2 class="text-2xl font-bold mb-6">{category.name}</h2>
            <div class="space-y-6">
              {category.questions.map(faq => (
                <div class="bg-white rounded-lg p-6 shadow-sm">
                  <h3 class="text-lg font-bold mb-3">{faq.question}</h3>
                  <p class="text-neutral-600">{faq.answer}</p>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>