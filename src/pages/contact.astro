---
import Layout from '../layouts/Layout.astro';

const offices = [
  {
    city: "Los Angeles",
    address: "123 Wilshire Blvd, Suite 500\nLos Angeles, CA 90010",
    phone: "(213) 555-1234",
    email: "la@luxeestates.com",
    hours: "Monday - Friday: 9am - 6pm\nSaturday: 10am - 4pm\nSunday: Closed"
  },
  {
    city: "New York",
    address: "456 Park Avenue, Floor 12\nNew York, NY 10022",
    phone: "(212) 555-5678",
    email: "nyc@luxeestates.com",
    hours: "Monday - Friday: 9am - 6pm\nSaturday: 10am - 4pm\nSunday: Closed"
  },
  {
    city: "Miami",
    address: "789 Ocean Drive, Suite 300\nMiami Beach, FL 33139",
    phone: "(305) 555-9012",
    email: "miami@luxeestates.com",
    hours: "Monday - Friday: 9am - 6pm\nSaturday: 10am - 4pm\nSunday: Closed"
  }
];
---

<Layout title="Contact Us">
  <!-- Hero Section -->
  <section class="pt-32 pb-20 bg-primary-800 text-white">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-3xl" data-aos="fade-up">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Contact Us</h1>
        <p class="text-lg text-primary-100 mb-8 max-w-2xl">
          We're here to answer your questions and help with your real estate needs. Reach out to our team today.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Contact Form and Info -->
  <section class="py-20">
    <div class="container mx-auto px-4 md:px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div data-aos="fade-right">
          <div class="bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
            
            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="first-name" class="block text-sm font-medium text-neutral-700 mb-1">First Name</label>
                  <input type="text" id="first-name" name="first-name" class="w-full p-3 border border-neutral-300 rounded-md" required />
                </div>
                
                <div>
                  <label for="last-name" class="block text-sm font-medium text-neutral-700 mb-1">Last Name</label>
                  <input type="text" id="last-name" name="last-name" class="w-full p-3 border border-neutral-300 rounded-md" required />
                </div>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="email" class="block text-sm font-medium text-neutral-700 mb-1">Email</label>
                  <input type="email" id="email" name="email" class="w-full p-3 border border-neutral-300 rounded-md" required />
                </div>
                
                <div>
                  <label for="phone" class="block text-sm font-medium text-neutral-700 mb-1">Phone</label>
                  <input type="tel" id="phone" name="phone" class="w-full p-3 border border-neutral-300 rounded-md" />
                </div>
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-neutral-700 mb-1">Subject</label>
                <select id="subject" name="subject" class="w-full p-3 border border-neutral-300 rounded-md">
                  <option value="buying">I'm interested in buying a property</option>
                  <option value="selling">I'm interested in selling a property</option>
                  <option value="renting">I'm interested in renting a property</option>
                  <option value="investing">I'm interested in investment opportunities</option>
                  <option value="other">Other inquiry</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-neutral-700 mb-1">Message</label>
                <textarea id="message" name="message" rows="5" class="w-full p-3 border border-neutral-300 rounded-md" required></textarea>
              </div>
              
              <div class="flex items-start">
                <input type="checkbox" id="privacy" name="privacy" class="mt-1 mr-2" required />
                <label for="privacy" class="text-sm text-neutral-600">
                  I agree to the <a href="/privacy" class="text-primary-600 hover:text-primary-700">Privacy Policy</a> and consent to being contacted regarding my inquiry.
                </label>
              </div>
              
              <button type="submit" class="w-full bg-primary-600 hover:bg-primary-700 text-white py-3 px-6 rounded-md font-medium transition-colors">
                Send Message
              </button>
            </form>
          </div>
        </div>
        
        <!-- Contact Information -->
        <div data-aos="fade-left">
          <h2 class="text-2xl font-bold mb-6">Our Offices</h2>
          
          <div class="space-y-8">
            {offices.map(office => (
              <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-xl font-bold mb-4">{office.city} Office</h3>
                
                <div class="space-y-4">
                  <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <div>
                      <div class="font-medium">Address</div>
                      <div class="text-neutral-600 whitespace-pre-line">{office.address}</div>
                    </div>
                  </div>
                  
                  <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    <div>
                      <div class="font-medium">Phone</div>
                      <a href={`tel:${office.phone.replace(/[^\d]/g, '')}`} class="text-neutral-600 hover:text-primary-600">{office.phone}</a>
                    </div>
                  </div>
                  
                  <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <div>
                      <div class="font-medium">Email</div>
                      <a href={`mailto:${office.email}`} class="text-neutral-600 hover:text-primary-600">{office.email}</a>
                    </div>
                  </div>
                  
                  <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div>
                      <div class="font-medium">Business Hours</div>
                      <div class="text-neutral-600 whitespace-pre-line">{office.hours}</div>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
          
          <div class="mt-8 bg-primary-50 p-6 rounded-lg border border-primary-100" data-aos="fade-up">
            <div class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h3 class="text-lg font-bold mb-2">Need Immediate Assistance?</h3>
                <p class="text-neutral-700">Call our central hotline at <a href="tel:+18005551234" class="text-primary-600 font-medium hover:text-primary-700">(800) 555-1234</a>, available 24/7 for urgent inquiries.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Map Section (Static) -->
  <section class="py-20 bg-neutral-50">
    <div class="container mx-auto px-4 md:px-6">
      <div class="text-center max-w-3xl mx-auto mb-12" data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Visit Our Offices</h2>
        <p class="text-neutral-600 text-lg">
          Find us at one of our convenient locations across the country.
        </p>
      </div>
      
      <div class="h-96 bg-neutral-200 rounded-lg overflow-hidden" data-aos="fade-up">
        <!-- Placeholder for an interactive map -->
        <img 
          src="https://images.pexels.com/photos/2217366/pexels-photo-2217366.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
          alt="Map showing office locations" 
          class="w-full h-full object-cover"
        />
      </div>
    </div>
  </section>
  
  <!-- Call To Action -->
  <section class="py-20 bg-primary-700 text-white">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-4xl mx-auto text-center" data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Join Our Newsletter</h2>
        <p class="text-lg text-primary-100 mb-8 max-w-2xl mx-auto">
          Stay updated with the latest property listings, market trends, and real estate insights.
        </p>
        
        <form class="max-w-md mx-auto flex">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="flex-grow p-3 rounded-l-md border-0 focus:ring-2 focus:ring-primary-300"
          />
          <button type="submit" class="bg-secondary-500 hover:bg-secondary-600 text-white px-6 py-3 rounded-r-md font-medium transition-colors">
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>

<script>
  // In a real implementation, this would handle the form submission
  document.addEventListener('DOMContentLoaded', function() {
    const contactForm = document.querySelector('form');
    if (contactForm) {
      contactForm.addEventListener('submit', function(e) {
        e.preventDefault();
        // In a real implementation, this would send the form data to a server
        alert('Thank you for your message! In a real implementation, this would be sent to our team.');
      });
    }
  });
</script>