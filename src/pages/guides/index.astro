---
import Layout from '../../layouts/Layout.astro';
import guides from '../../data/guides.json';
---

<Layout title="Real Estate Guides">
  <section class="pt-32 pb-20">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-3xl mx-auto text-center mb-12" data-aos="fade-up">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Real Estate Guides</h1>
        <p class="text-neutral-600 text-lg">Comprehensive resources to help you navigate the real estate market</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {guides.guides.map((guide, index) => (
          <article class="bg-white rounded-lg overflow-hidden shadow-sm" data-aos="fade-up" data-aos-delay={100 * (index % 3)}>
            <a href={`/guides/${guide.id}`} class="block">
              <img src={guide.image} alt={guide.title} class="w-full h-48 object-cover" />
              <div class="p-6">
                <div class="text-sm text-primary-600 mb-2">{guide.category}</div>
                <h2 class="text-xl font-bold mb-2 hover:text-primary-600 transition-colors">{guide.title}</h2>
                <p class="text-neutral-600 mb-4 line-clamp-2">{guide.excerpt}</p>
                <div class="flex flex-wrap gap-2">
                  {guide.tags.map(tag => (
                    <span class="text-sm bg-neutral-100 text-neutral-700 px-2 py-1 rounded-md">{tag}</span>
                  ))}
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>