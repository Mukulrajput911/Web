---
const testimonials = [
  {
    quote: "Working with LuxeEstates was an absolute pleasure. They found us our dream home in record time and negotiated a price well below our budget.",
    author: "Sarah Johnson",
    location: "First-time Homebuyer",
    image: "https://images.pexels.com/photos/733872/pexels-photo-733872.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    quote: "The team at LuxeEstates made selling our family home painless. Their marketing strategy attracted multiple offers, and we sold above asking price.",
    author: "Michael Rodriguez",
    location: "Property Seller",
    image: "https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    quote: "As an investor, I've worked with many realtors, but LuxeEstates stands out with their market insights and attention to detail. They've helped me build a profitable portfolio.",
    author: "Amanda Chen",
    location: "Real Estate Investor",
    image: "https://images.pexels.com/photos/774909/pexels-photo-774909.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  }
];
---

<section class="py-20 bg-neutral-900 text-white" id="testimonials">
  <div class="container mx-auto px-4 md:px-6">
    <div class="text-center max-w-3xl mx-auto mb-12" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">What Our Clients Say</h2>
      <p class="text-neutral-400">Hear from our satisfied clients about their experiences</p>
    </div>
    
    <div class="swiper-container" id="testimonials-slider">
      <div class="swiper-wrapper pb-12">
        {testimonials.map((testimonial, index) => (
          <div class="swiper-slide p-4" data-aos="fade-up" data-aos-delay={100 * index}>
            <div class="bg-neutral-800 rounded-lg p-8 h-full">
              <svg width="45" height="36" class="text-primary-500 mb-6" viewBox="0 0 45 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M13.9 18.0002H5.8C5.48175 15.6868 5.85784 13.3394 6.88823 11.2741C7.91862 9.20879 9.55512 7.53303 11.5 6.5002" stroke="currentColor" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M14 18.0002C14 22.4185 10.4183 26.0002 6 26.0002C1.58172 26.0002 -2 22.4185 -2 18.0002C-2 13.5819 1.58172 10.0002 6 10.0002C10.4183 10.0002 14 13.5819 14 18.0002Z" stroke="currentColor" stroke-width="4"/>
                <path d="M33.9 18.0002H25.8C25.4818 15.6868 25.8578 13.3394 26.8882 11.2741C27.9186 9.20879 29.5551 7.53303 31.5 6.5002" stroke="currentColor" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M34 18.0002C34 22.4185 30.4183 26.0002 26 26.0002C21.5817 26.0002 18 22.4185 18 18.0002C18 13.5819 21.5817 10.0002 26 10.0002C30.4183 10.0002 34 13.5819 34 18.0002Z" stroke="currentColor" stroke-width="4"/>
              </svg>
              
              <p class="text-lg mb-8">{testimonial.quote}</p>
              
              <div class="flex items-center">
                <img src={testimonial.image} alt={testimonial.author} class="w-12 h-12 rounded-full object-cover mr-4" />
                <div>
                  <div class="font-semibold">{testimonial.author}</div>
                  <div class="text-neutral-400 text-sm">{testimonial.location}</div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="swiper-pagination"></div>
    </div>
    
    <div class="mt-12 text-center" data-aos="fade-up">
      <a href="/about#testimonials" class="inline-flex items-center text-primary-400 font-medium hover:text-primary-300 transition-colors">
        View More Testimonials
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  import Swiper from 'swiper/bundle';
  import 'swiper/css/bundle';
  
  document.addEventListener('DOMContentLoaded', function() {
    new Swiper('#testimonials-slider', {
      slidesPerView: 1,
      spaceBetween: 30,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      breakpoints: {
        768: {
          slidesPerView: 2,
        },
        1024: {
          slidesPerView: 3,
        },
      },
    });
  });
</script>